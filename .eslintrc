{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },

  "rules": {
    "comma-dangle": [2, "never"],
    "curly": [2, "all"],
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "jsx-quotes": [2, "prefer-double"],
    "new-cap": 2,
    "no-caller": 2,
    "no-empty": 2,
    "no-eq-null": 2,
    "no-new": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unused-expressions": 0,
    "no-unused-vars": 2,
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single", "avoid-escape"],
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-quotes": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "semi": [2, "always"],
    "strict": 0,
    "wrap-iife": [2, "outside"]
  },

  "plugins": [
    "react"
  ]
}
