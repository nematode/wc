{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },

  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "curly": [1, "all"],
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "jsx-quotes": [1, "prefer-double"],
    "no-caller": 2,
    "no-empty": 2,
    "no-eq-null": 2,
    "no-new": 2,
    "no-trailing-spaces": 1,
    "no-undef": 1,
    "no-unused-expressions": 0,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "react/jsx-curly-spacing": [1, "always"],
    "react/jsx-quotes": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "semi": [1, "always"],
    "strict": 0,
    "wrap-iife": [2, "outside"]
  },

  "plugins": [
    "react"
  ]
}
